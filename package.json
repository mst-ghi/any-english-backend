{
  "name": "backend",
  "version": "0.0.1",
  "author": "Mostafa Gholami (mst-ghi)",
  "scripts": {
    "prepare": "husky install && npx prisma generate",
    "build": "nest build",
    "start": "node dist/src/main",
    "dev": "nest start --watch",
    "debug": "nest start --debug --watch",
    "prisma:generate": "npx prisma generate",
    "prisma:format": "npx prisma format",
    "prisma:migrate": "npx prisma migrate dev --name init",
    "prisma:seed": "npx prisma db seed",
    "prisma:compile-seed": "tsc prisma/seeds/index.ts",
    "eslint:check": "eslint \"{src,libs}/**/*.ts\"",
    "eslint:fix": "eslint . --ext ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "format:check": "prettier --check ./**/*.{ts,js,json,*rc}",
    "lint": "npm run eslint:check && npm run format:check",
    "check:types": "tsc --pretty --noEmit"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "node prisma/seeds/index.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.9",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.9",
    "@nestjs/platform-express": "^10.2.9",
    "@nestjs/swagger": "^7.1.16",
    "@prisma/client": "^5.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "dayjs": "^1.11.10",
    "helmet": "^7.1.0",
    "js-sha3": "^0.9.2",
    "morgan": "^1.10.0",
    "prisma": "^5.6.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "slugify": "^1.6.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.2.9",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.2",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/toolkit(|/.*)$": "<rootDir>/libs/toolkit/src/$1"
    }
  }
}
