// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  email      String
  fullname   String
  password   String
  access     String   @default("user")
  status     String   @default("active")
  created_at DateTime @default(now())

  tokens    Token[]
  lightners Lightner[]

  @@map("users")
}

model Token {
  id           String   @id @default(cuid())
  user_id      String
  token        String   @unique
  r_token      String   @unique
  invoked      Boolean  @default(false)
  expires_at   DateTime
  r_expires_at DateTime
  created_at   DateTime @default(now())

  user User? @relation(fields: [user_id], references: [id])

  @@map("tokens")
}

model Word {
  id         String   @id @default(cuid())
  word       String
  meaning    String?
  created_at DateTime @default(now())

  phrases   Phrase[]
  lightners Lightner[]

  @@map("words")
}

model Phrase {
  id         String   @id @default(cuid())
  word_id    String?
  phrase     String
  meaning    String
  created_at DateTime @default(now())

  word      Word?      @relation(fields: [word_id], references: [id])
  lightners Lightner[]

  @@map("phrases")
}

model Lightner {
  id         String   @id @default(cuid())
  user_id    String
  word_id    String?
  phrase_id  String?
  level      Int      @default(4) @db.SmallInt
  created_at DateTime @default(now())

  user   User    @relation(fields: [user_id], references: [id])
  word   Word?   @relation(fields: [word_id], references: [id])
  phrase Phrase? @relation(fields: [phrase_id], references: [id])

  @@map("lightner")
}

model Conversation {
  id         String   @id @default(cuid())
  title      String
  characters String[]
  created_at DateTime @default(now())

  items ConversationItem[]

  @@map("conversations")
}

model ConversationItem {
  id              String   @id @default(cuid())
  conversation_id String
  character       String
  phrase          String
  meaning         String
  created_at      DateTime @default(now())

  conversation Conversation @relation(fields: [conversation_id], references: [id])

  @@map("conversation_items")
}
